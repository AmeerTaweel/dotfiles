{
	"snippets.userSnippetsDirectory": "~/.config/ulti-snippets",
	"clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/12.0.0/clangd_12.0.0/bin/clangd",
	"xml.java.home": "/usr/lib/jvm/java-11-openjdk-amd64",
	"java.home": "/usr/lib/jvm/java-11-openjdk-amd64",
	"diagnostic-languageserver.filetypes": {
		"vim": "vint",
		"markdown": "write-good",
		"sh": "shellcheck"
	},
	"diagnostic-languageserver.formatFiletypes": {
		"python": ["black", "isort"],
		"sh": "shfmt"
	},
	// Disable the spell checker status on the status bar
	"cSpell.showStatus": false,
	// Disable prettier status on the status bar
	"prettier.statusItemText": "",
	"markdownlint.config": {
		"line-length": {
			// Turn off line-length checks for code blocks to allow long commands
			"code_blocks": false
		}
  },
